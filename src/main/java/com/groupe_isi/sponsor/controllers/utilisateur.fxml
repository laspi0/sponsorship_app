<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="1233.0" style="-fx-background-color: #2E7D32;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.groupe_isi.sponsor.controllers.UserListController">
   <children>
      <VBox alignment="CENTER" spacing="10">
         <Label style="-fx-font-size: 24; -fx-text-fill: white;" text="Liste des Utilisateurs" />
         <TableView fx:id="userTableView" prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: #FFFFFF; -fx-border-color: #1B5E20; -fx-border-width: 2; -fx-font-size: 16;">
            <!-- Ajoutez d'autres styles au besoin -->
         </TableView>
         <HBox spacing="10">
            <Button onAction="#deactivateUser" style="-fx-font-size: 18; -fx-background-color: #EF5350; -fx-text-fill: white; -fx-border-color: #B71C1C;" text="Désactiver l'utilisateur sélectionné" />
         </HBox>
         <Separator />
      </VBox>
      <VBox layoutX="823.0" layoutY="103.0" prefHeight="294.0" prefWidth="230.0" spacing="10">
         <Label style="-fx-font-size: 18; -fx-text-fill: white;" text="Créer un utilisateur" />
         <TextField fx:id="nomField" promptText="Nom" />
         <TextField fx:id="prenomField" promptText="Prénom" />
         <TextField fx:id="loginField" promptText="Login" />
         <TextField fx:id="passwordField" promptText="Mot de passe" />
         <Button onAction="#createUser" prefHeight="39.0" prefWidth="234.0" style="-fx-font-size: 18; -fx-background-color: #4CAF50; -fx-text-fill: white;" text="Créer" />
      </VBox>
   </children>
</AnchorPane>
