<AnchorPane prefHeight="700.0" prefWidth="1233.0" style="-fx-background-color: teal;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.groupe_isi.sponsor.controllers.UserListController">
   <children>
