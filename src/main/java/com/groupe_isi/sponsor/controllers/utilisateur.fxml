      <TextField fx:id="nomField" layoutX="864.0" layoutY="118.0" prefHeight="25.0" prefWidth="202.0" promptText="Nom" />
      <TextField fx:id="prenomField" layoutX="864.0" layoutY="180.0" prefHeight="25.0" prefWidth="202.0" promptText="Prénom" />
      <TextField fx:id="loginField" layoutX="864.0" layoutY="244.0" prefHeight="25.0" prefWidth="202.0" promptText="Login" />
